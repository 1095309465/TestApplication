<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="?android:actionBarItemBackground"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@mipmap/ic_back_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_back"
                style="@style/video_style_dialog_progress"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/style_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="海宴明辨中心" />

            <TextView
                android:id="@+id/tv_more"
                style="@style/style_text_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"

                android:padding="10dp"
                android:transitionName="view1"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="内容审核"
        android:textColor="@color/text_black_3"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_photo_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_home_bg"
            android:drawableLeft="@mipmap/ic_tupian_jiancha"
            android:drawablePadding="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="图像审核" />

        <Button
            android:id="@+id/btn_video_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home_bg"
            android:drawableLeft="@mipmap/ic_video_check"
            android:drawablePadding="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="视频审核" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="活体检测"
        android:textColor="@color/text_black_3"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_photo_compare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_home_bg"
            android:drawableLeft="@mipmap/ic_upload_photo"
            android:drawablePadding="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="上传图片对比" />

        <Button
            android:id="@+id/btn_slide_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home_bg"
            android:drawableLeft="@mipmap/ic_slide_check"
            android:drawablePadding="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="静默模式活体" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_home_bg"
            android:drawableLeft="@mipmap/ic_action_check"
            android:drawablePadding="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="动作模式活体" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home_bg"
            android:drawableLeft="@mipmap/ic_tupian_jiancha"
            android:drawablePadding="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible" />


    </LinearLayout>


</LinearLayout>